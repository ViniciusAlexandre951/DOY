<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fundo_app">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp"
        android:text="@string/titulo1"
        android:textAlignment="center"
        android:textColor="#3eae2a"
        android:textSize="46sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#818c2d" />

    <TextView
        android:id="@+id/subTituloTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/titulo2"
        android:textAlignment="center"
        android:textColor="#3eae2a"
        android:textSize="70sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_Comeco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="133dp"
            android:background="#818c2d"
            android:layerType="hardware"
            android:onClick="chamaTelaLogin"
            android:text="@string/btnEntrar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="28sp" />
    </RelativeLayout>
</LinearLayout>